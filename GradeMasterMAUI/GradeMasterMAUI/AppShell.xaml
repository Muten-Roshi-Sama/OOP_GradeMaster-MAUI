<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GradeMasterMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GradeMasterMAUI"
    xmlns:Views="clr-namespace:GradeMasterMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="GradeMasterMAUI">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate Views:MainPage}" />
        <ShellContent
            Title="Students"
            ContentTemplate="{DataTemplate Views:ManageStudents}" />
        <ShellContent
            Title="Professors"
            ContentTemplate="{DataTemplate Views:ManageProfessors}" />
        <ShellContent
            Title="About Page"
            ContentTemplate="{DataTemplate Views:AboutPage}" />
    </TabBar>
    
</Shell>
